#!/bin/bash

# mac style copy and paste
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'

# props jessfraz
# Detect which `ls` flavor is in use
if ls --color >/dev/null 2>&1; then # GNU `ls`
	colorflag="--color"
else # OS X `ls`
	colorflag="-G"
fi

alias c="clear"
alias ll='ls -alF ${colorflag}'
alias la='ls -A ${colorflag}'
alias l='ls -CF ${colorflag}'

alias cat=ccat # coloured cat  https://github.com/jingweno/ccat

# git shortcuts
alias gb="git checkout -b"
alias gs="git status"
alias ga="git add"
alias gap="git add -p"

alias gcm="git commit -S -m"
alias gp="git push"
alias gca="git commit --amend"

# delete remote branch
alias gbrd="git push --no-verify origin -d"
alias gpod="git push --no-verify origin -d"

# select/fuzzy find branch to switch to
alias gbs="git branch | fzf | xargs git checkout"
